root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4
indent_style = tab

[*.json]
indent_size = 2

[*.gradle]
indent_size = 4
indent_style = tab

[*.html]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.sql]
indent_size = 2

[*.tsx]
indent_size = 2

[*.yaml]
indent_size = 2
trim_trailing_whitespace = false
